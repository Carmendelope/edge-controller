[Unit]
Description=Edge Controller service
Wants=vpnclient.service
After=network.target vpnclient.service
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=always
RestartSec=1
User=vagrant
ExecStart=/vagrant/bin/linux_amd64/edge-controller run --joinTokenPath=/vagrant/joinToken.json --useBBoltProviders --bboltpath=/home/vagrant/database.db --name EIC0015 --labels=lab1:val1,lab2:val2
[Install]
WantedBy=multi-user.target
